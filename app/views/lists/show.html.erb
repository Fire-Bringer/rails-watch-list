<h1><%= @list.name %> List</h1>

<div class="d-block mx-auto m-3" style="width: 200px">
  <%= link_to "Add a New Bookmark", new_list_bookmark_path(@list), class: "btn btn-success" %>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product m-3">
    <div class="my-2"><%= image_tag bookmark.movie.poster_url %></div>
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <%= link_to 'Delete', bookmark_path(bookmark), class: "btn btn-danger mt-2 ", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

<div class="d-block mx-auto m-3" style="width: 200px">
  <%= link_to "Back to Lists Index", lists_path, class: "btn btn-gradient" %>
</div>

