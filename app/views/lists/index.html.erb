<!--Banner-->
<div class="banner">
  <div class="container">
    <h1>Make your viewing experience <strong>YOUR OWN</strong>!</h1>
    <p>The cinematic world at your fingertips</p>
    <a class="btn btn-flat" href="#">New List</a>
  </div>
</div>


<!--Lists Categories-->
<h1>My Lists</h1>

<div class="cards rounded d-flex justify-content-around flex-wrap">
  <% @lists.each do |list| %>
    <%= link_to list do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
      <%= list.name %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="d-block mx-auto m-3" style="width: 200px">
  <%= link_to "Create New List", new_list_path, class: "btn btn-gradient" %>
</div>

